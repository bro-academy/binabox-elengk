<section class='team'>
  <h2 class='team__title'>{{ teamTitle }}</h2>
  <ul class='team__list'>
    {% for member in teamMembers %}
      <li class='team__listItem'>
        <article class='team-member'>
          <img class='teamMember__image' src='{{}}' alt='{{ member.image.alt }}'>
          <h3 class='teamMember__name'>{{ member.name }}</h3>
          <p class='teamMember__role'>{{ member.role }}</p>

          <ul class='teamMember__socialList'>
            {% for social in member.socials %}
              <li class='teamMember__socialItem'>
                <a class='teamMember__socialLink' href='{{ social.href }}'>
                  <img class='teamMember__socialImage' src='{{ social.icon.src }}' alt='{{ social.icon.alt }}'>
                  {{ social.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </article>
      </li>
    {% endfor %}
  </ul>
</section>
